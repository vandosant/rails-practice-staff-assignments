<%= "#{@person.first_name} #{@person.last_name}" %>
<%= link_to "Edit", edit_person_path %>

<h3 class="locations">Locations</h3>
<%= link_to "+ Add Location", new_person_assignment_path(@person.id), class: "add-location" %>
<table class="table">
  <tr>
    <td>Location</td>
    <td>Role</td>
    <td></td>
  </tr>
  <% @person.assignments.each do |assignment| %>
    <tr class="assignment">
      <td><%= assignment.location.name %></td>
      <td><%= assignment.role %></td>
      <td>
        <%= link_to "edit", edit_person_assignment_path(id: assignment.id, person_id: @person.id) %>
        <%= link_to "delete", person_delete_assignment_path(id: assignment.id, person_id: @person.id), method: "DELETE", data: {confirm: "Are you sure?"} %>
      </td>
    </tr>
  <% end %>
</table>