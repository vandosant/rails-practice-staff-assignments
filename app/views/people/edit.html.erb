<%= form_for @person do |f| %>
  <% if @person.errors.present? %>
    <% @person.errors.full_messages.each do |error| %>
      <div class='errors'>
        <%= error %>
      </div>
    <% end %>
  <% end %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <%= f.submit "Update" %>
<% end %>